@model LoginUserViewModel
@{
    Layout = null;
}

<link type="text/css" rel="stylesheet" href="~/css/Account/UserLogin.css" />
<section class="user_login_wrapper">
    <div class="login_header">
        <h2>User</h2>
    </div>
    <div class="login_form_wrapper">
        <form class="login_form" asp-controller="Account" asp-action="UserLogin" method="post">
            <div class="login">
                <label asp-for="Email">Email adress</label>
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="password">
                <label asp-for="Password">Password</label>
                <input type="password" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="remember">
                <input type="checkbox" id="isRemember" name="isRemember" value="false" />
                <label for="isRemember">remember me</label>
            </div>
            <div class="forget_password">
                <a href="">Forget your password?</a>
            </div>
            <div class="sign_in_button">
                <input type="submit" value="Login" />
            </div>
        </form>
    </div>
</section>

