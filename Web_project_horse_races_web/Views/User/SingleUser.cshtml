        <section class="user_bet_profile">
            <section class="user_bets">
                <h2>User bet history</h2>
                <table class="bet_history">
                    <tr>
                        <th>Race Id</th>
                        <th>Race Date</th>
                        <th>Race Participant id</th>
                        <th>Horse Name</th>
                        <th>Horse Age</th>
                        <th>Number</th>
                        <th>Position</th>
                        <th>Bet Type</th>
                        <th>Bookmaker name</th>
                        <th>coefficient</th>
                        <th>bet sum</th>
                        <th>possible win</th>
                        <th>status</th>

                    </tr>
                    @foreach (var userBet in Model.UserBets)
                    {
                    <tr>
                        <td>@userBet.BookmakerBet.RaceParticipantBet.RaceParticipant.Race.Id</td>
                        <td>@userBet.BookmakerBet.RaceParticipantBet.RaceParticipant.Race.RaceDate</td>
                        <td>@userBet.BookmakerBet.RaceParticipantBet.RaceParticipant.Id</td>
                        <td>@userBet.BookmakerBet.RaceParticipantBet.RaceParticipant.Horse.Name</td>
                        <td>@userBet.BookmakerBet.RaceParticipantBet.RaceParticipant.Horse.Age</td>
                        <td>@userBet.BookmakerBet.RaceParticipantBet.RaceParticipant.Number</td>
                        <td>@userBet.BookmakerBet.RaceParticipantBet.RaceParticipant.Position</td>
                        <td>@userBet.BookmakerBet.RaceParticipantBet.RaceBetType.RaceBetTypeName</td>
                        <td>@userBet.BookmakerBet.Bookmaker.Name</td>
                        <td>@userBet.BookmakerBet.Coefficient</td>
                        <td>@userBet.BetSum</td>
                        <td>@userBet.PossibleWinSum</td>
                        <td>@userBet.BetStatus</td>
                    </tr>
                    }
                </table>
                
            </section>
            <section class="profile_summary">
                <h2>Summary</h2>
                <div>User money balance : @Model.MoneyBalance</div>
                <div>User bet count : @Model.BetCount</div>
                <div>User win bet count : @Model.WinBets</div>
                <div>User loose bet count : @Model.LooseBets</div>
            </section>
            
        </section>

    </section>
</section>